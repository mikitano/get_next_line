{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug C Program",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/a.out",   // Path to your compiled executable
      "args": [],                             // Any command line arguments to your program
      "stopAtEntry": false,                   // Set to true if you want to stop at main
      "cwd": "${workspaceFolder}",            // Working directory
      "environment": [],
      "externalConsole": false,               // Set true if you want a separate console window
      "MIMode": "gdb",                        // Debugger type (gdb or lldb)
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}